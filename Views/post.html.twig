<< _seo.offsetSet('title', '{{ field_render('meta_title', 'post@' ~ post.id) }}') >>
<< _seo.offsetSet('description', '{{ field_render('meta_description', 'post@' ~ post.id) }}') >>
<< _seo.offsetSet('keywords', '{{ field_render('meta_keywords', 'post@' ~ post.id) }}') >>

<style>
    .side-bg .background-image{
        background: url({{ img(post.thumbnail.path) }}) top;
    }
</style>
<section aria-label="services-hair" class="side-bg">
    <div class="col-md-6 image-container">
        <div class="background-image"></div>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-md-5 col-md-offset-7">
                <h2>{{ post.title }}</h2>
                {{ post.content|raw }}
            </div>
        </div>
    </div>
</section>